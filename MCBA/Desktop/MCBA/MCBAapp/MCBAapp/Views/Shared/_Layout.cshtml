<!DOCTYPE html>
<html lang="en">
@{
    var isLoggedIn = Context.Session.GetInt32(nameof(Customer.CustomerID)).HasValue;
}
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MCBAapp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body style="height: 100%">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            @if (isLoggedIn)
            {
                <a class="navbar-brand" asp-area="" asp-controller="Customer" asp-action="Index">MCBAapp</a>
            }
            else
            {
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MCBAapp</a>
            }
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Index" asp-route-buttonType='D'> Deposit </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Index" asp-route-buttonType='W'> Withdraw </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Index" asp-route-buttonType='T'> Transfer </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Billpay" asp-action="BillList" asp-route-buttonType='B'>Billpay </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Index" asp-route-buttonType='S'> My Statement </a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Profile"> Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Login" asp-action="Logout"> Logout </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Login" asp-action="Login"> Login </a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    @* <li class="nav-item"> *@
                    @*     <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
                    @* </li> *@
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Index">My Accounts</a>
                        </li>
                        // TODO: May need to add more nav-items for other pages that require login
                        // TODO: e.g. Bill Pay, Check Statements, etc.
                    }

                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - MCBAapp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>