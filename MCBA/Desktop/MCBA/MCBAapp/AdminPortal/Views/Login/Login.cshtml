@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AdminPortal.ViewModels.AdminLogin 
@{
    ViewData["Title"] = "AdminLogin";
}

<h1 class="display-4">Admin Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Login" asp-action="Login">
            <div class="form-group">
                <label for="LoginID" class="control-label">Login ID</label>
                <input id="LoginID" name="LoginID" class="form-control" value="@ViewBag.LoginID?.ToString()"
                    data-val="true" data-val-required="The Login ID field is required." />
                @Html.ValidationMessage("LoginID", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input id="Password" name="Password" type="password" class="form-control"
                    data-val="true" data-val-required="The Password field is required." />
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
