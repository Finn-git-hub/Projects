@using MCBAapp.Models.Enums
@model BillPay
@{
    ViewData["Title"] = "Schedule a bill ";
    Context.Session.SetInt32("PayeeID", Model.Payee.PayeeID);
}
<h1>Bill details</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <label asp-for="PayeeID" class="control-label" >Schedule bill to this Payee:@Model.Payee.PayeeID</label>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" type="text" class="form-control"/>
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control"/>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleTimeUtc" class="control-label">Schedule Time</label>
                <input asp-for="ScheduleTimeUtc" class="form-control"/>
                <span asp-validation-for="ScheduleTimeUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>
                    <input type="radio" name="billType" value="OneOff" checked/>
                    OneOff
                </label>
                    <br />
                    <label>
                        <input type="radio" name="billType" value="Monthly" checked/>
                        Monthly
                    </label>
            </div>
            <div class="form-group">
                <button type="submit" name="Create" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CreateBill">Cancel</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}